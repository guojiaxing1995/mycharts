apiVersion: apps/v1
kind: Deployment
metadata:
  name: konga-deployment
  namespace: yueqing
spec:
  replicas: 1
  selector:
    matchLabels:
      app: konga-yueqing
  template:
    metadata:
      labels:
        app: konga-yueqing
    spec:
      nodeSelector:
        type: Non-business
      containers:
      - name: konga
        image: pantsel/konga:0.14.9
        imagePullPolicy: IfNotPresent
        livenessProbe:
          httpGet:
            path: /
            port: 1337
          initialDelaySeconds: 30                            
          periodSeconds: 20                                   
          timeoutSeconds: 5                                   
          successThreshold: 1                                 
          failureThreshold: 3                                 
        readinessProbe:
          httpGet:
            path: /
            port: 1337                                       
          initialDelaySeconds: 30                             
          periodSeconds: 20                                  
          timeoutSeconds: 5                                  
          successThreshold: 1                                 
          failureThreshold: 3                                 
        ports:
        - containerPort: 1337
        env:
        - name: TOKEN_SECRET
          value: "localhost"
        - name: NODE_ENV
          value: "development"
        - name: DB_ADAPTER
          value: "postgres"
        - name: DB_HOST
          value: "postgresvc"
        - name: DB_USER
          value: "konga"
        - name: DB_PASSWORD
          value: "konga"
        - name: DB_DATABASE
          value: "konga"
        volumeMounts:
        - name: konga-localtime
          mountPath: /etc/localtime
      volumes:
      - name: konga-localtime
        hostPath:
          path: /etc/localtime
          
---
apiVersion: v1
kind: Service
metadata:
  name: kongasvc
  namespace: yueqing
  labels:
    name: kongasvc
spec:
  type: NodePort
  ports:
    # 服务访问端口
  - port: 1337   
    protocol: TCP
    # 容器端口
    targetPort: 1337
    nodePort: 30010
  selector:
    app: konga-yueqing
    
